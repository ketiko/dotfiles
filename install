#!/bin/bash

CURRENTDIR="$( dirname "${BASH_SOURCE[0]}" )"
SCRIPTPATH=`readlink -f $CURRENTDIR`
cd $SCRIPTPATH

ACTION=$1

if [ -z $ACTION ]; then
  ACTION="dotfiles"
fi

if [ $ACTION != "all" ]; then
  . "$SCRIPTPATH/scripts/$ACTION"
else
  . "$SCRIPTPATH/scripts/packages"
  . "$SCRIPTPATH/scripts/dotfiles"
  . "$SCRIPTPATH/scripts/vim"
  . "$SCRIPTPATH/scripts/solarized"
  . "$SCRIPTPATH/scripts/rbenv"
fi
