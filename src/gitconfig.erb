[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
  editor = gvim
[core]
  autocrlf = true
  whitespace = cr-at-eol
  editor = gvim -f
  excludesfile = ~/.gitignore
[color]
  pager = true
  status = auto
  branch = auto
  diff = auto
  interactive = auto
[push]
  default = upstream
[pull]
  rebase = true
[branch]
  autosetuprebase = local
[clean]
  requireForce = false
[fetch]
  fsckObjects = true
[receive]
  autogc = true
  fsckObjects = true
[help]
  autocorrect = 1
[log]
  abbrevCommit = true
  date = relative
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %an' --abbrev-commit --date=relative --decorate
  st = status
  sh = stash save -u
  ci = commit
  br = branch
  ba = branch -a
  co = checkout
  cb = checkout -b
  df = diff
  dt = difftool
  da = diffall
  dc = diff --cached
  ca = commit --amend
  aa = add --all
  mg = merge
  mt = mergetool
  rb = rebase
  ft = fetch
  fa = fetch --all
  ff = merge --ff-only
  ps = push
  pl = pull
[diff]
  tool = beyondcompare
  guitool = beyondcompare
  renames = copies
[difftool]
  prompt = false
  keepBackup = false
[merge]
  tool = beyondcompare
[mergetool]
  prompt = false
  keepBackup = false
[difftool "beyondcompare"]
  cmd = \"c:/program files (x86)/beyond compare 3/bcomp.exe\" \"$LOCAL\" \"$REMOTE\" -nobackups -title1=\"Old Version\" -title2=\"New Version\"
  trustExitCode = true
[mergetool "beyondcompare"]
  cmd =  \"c:/program files (x86)/beyond compare 3/bcomp.exe\" \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\" -nobackups -title1=\"Local Changes\" -title2=\"Remote Changes\" -title3=\"Committed\"
  trustExitCode = true
