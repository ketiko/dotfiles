require 'irb/completion'
require 'irb/ext/save-history'
require 'ap'
require 'wirble'
require 'bond'
ARGV.concat ["--readline", "--prompt-mode", "simple" ]

Wirble.init
Wirble.colorize

Bond.start

IRB.conf[:SAVE_HISTORY] = 1000
IRB.conf[:HISTORY_FILE] = "#{ENV['HOME']}/.irb-save-history"
IRB.conf[:AUTO_INDENT] = true
