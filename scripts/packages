#!/bin/bash

if [[ $(uname) != Darwin ]]; then
  sudo apt-get install -y \
    ack-grep \
    axel
    bash-completion \
    build-essential \
    curl \
    editorconfig \
    exuberant-ctags \
    git \
    git-extras \
    grc \
    htop \
    keychain \
    nodejs \
    npm \
    pv \
    silversearcher-ag \
    tmux \
    tree \
    vim-nox \
    zsh
fi

if [[ $(uname) == Darwin ]]; then
  if type brew &> /dev/null; then
    brew tap homebrew/dupes
    brew install \
      ack \
      axel \
      bar \
      bash-completion \
      binutils \
      coreutils \
      cscope \
      ctags \
      curl \
      editorconfig \
      fasd \
      findutils --default-names \
      git \
      git-extras \
      gnu-indent --default-names \
      gnu-sed --default-names \
      gnu-tar --default-names \
      gnu-getopt --default-names \
      gnu-which --default-names \
      gnutls --default-names \
      gpg-agent \
      grc \
      htop-osx \
      hub \
      keychain \
      macvim --with-cscope --with-lua --override-system-vim \
      node \
      openssl \
      pv \
      readline \
      reattach-to-user-namespace \
      ssh-copy-id \
      the_silver_searcher \
      tidy-html5 \
      tmux \
      trash \
      tree \
      watch \
      wget \
      wrk \
      zsh
  fi
fi
