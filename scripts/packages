#!/bin/bash

if [[ $(uname) != Darwin ]]; then
  sudo apt-get install -y build-essential bash-completion curl git vim-nox tmux exuberant-ctags keychain
  sudo -k
fi

if [[ $(uname) == Darwin ]]; then
  if type brew &> /dev/null; then
    brew install bash-completion2 curl git macvim tmux ctags keychain
  fi
fi
