#!/bin/bash

please=
if [[ $(uname) != Darwin ]]; then
  if command -v sudo &> /dev/null; then
    please=sudo
  fi
fi

if [[ $(uname) != Darwin ]]; then
  $please apt-get install -y \
    ack-grep \
    atop \
    axel \
    bar \
    bat \
    build-essential \
    curl \
    dstat \
    editorconfig \
    exa \
    exuberant-ctags \
    fasd \
    fzf \
    git \
    git-extras \
    grc \
    htop \
    ioping \
    iotop \
    keychain \
    neovim \
    nodejs \
    npm \
    pv \
    python3-pip \
    ranger \
    ripgrep \
    silversearcher-ag \
    stow \
    tmux \
    tree \
    vim-nox \
    wget \
    zsh
fi

if [[ $(uname) == Darwin ]]; then
  if command -v brew &> /dev/null; then
    brew install \
      ack \
      axel \
      bar \
      bat \
      coreutils \
      cscope \
      curl \
      diff-so-fancy \
      editorconfig \
      exa \
      fasd \
      findutils \
      fzf \
      git \
      git-extras \
      gnu-getopt \
      gnu-indent \
      gnu-sed \
      gnu-tar \
      gnu-time \
      gnu-which \
      gnupg \
      gnutls \
      gpg \
      gpg2 \
      grc \
      grep \
      htop-osx \
      hub \
      keychain \
      macvim \
      ncdu \
      neofetch \
      neovim \
      node \
      openssl \
      pinentry-mac \
      pv \
      ranger \
      readline \
      reattach-to-user-namespace \
      ripgrep \
      ssh-copy-id \
      stow \
      the_silver_searcher \
      tidy-html5 \
      tmux \
      trash \
      tree \
      watch \
      wget \
      wrk \
      zsh

    brew install --HEAD universal-ctags/universal-ctags/universal-ctags
    brew tap homebrew/cask-fonts
    brew install --cask font-droid-sans-mono-nerd-font

    pip3 install neovim
  fi
fi

$please npm install --force -g diff-so-fancy
